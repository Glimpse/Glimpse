                        </ul> 
                    </td>
                    <td>
                        <ul class="plain">
                            <li>@Html.ActionLink("Documentation", MVC.Help.Plugin("Config"))<br /> - Short description about this plugin</li> 
                        </ul> 
                    </td>
                    <td>
                        <ul class="plain">
                            <li>@Html.ActionLink("Configuration", MVC.Help.Plugin("Config"))<br /> - Short description about this plugin</li>
                            <li>@Html.ActionLink("Blacklisting", MVC.Help.Plugin("Config"))<br /> - Short description about this plugin</li>
                            <li>@Html.ActionLink("Creating Plugins", MVC.Help.Plugin("Config"))<br /> - Short description about this plugin</li>
                        </ul> 
                    </td>
                </tr>
            </table>    
        </div>
        <a href="#" class="myButton help-more">More Help Links</a>
    </div>
</div>

@section scripts {  
    <script type="text/javascript">
        $(document).ready(function() {
            var links = $('.help-links');
	        $('.help-more').mouseover(function() { links.fadeIn('fast'); });
            links.mouseleave(function() { links.fadeOut(); });
        });
    </script>
}